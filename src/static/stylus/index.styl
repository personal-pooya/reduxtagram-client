@import '_normalize.styl'
@import '_typography.styl'
@import '_animations.styl'

body
  background #fff

.photo-grid
  display flex
  flex-wrap wrap
  max-width 1200px
  margin 0 auto

.grid-figure
  flex-basis calc(33.333% - 4rem)
  flex-shrink 0
  margin 0 2rem 2rem 2rem
  padding 2rem
  border 1px solid lightgray
  background white
  box-shadow 0 0 0 5px rgba(0,0,0,0.03);
  position relative

.single-photo
  @extend .grid-figure
  max-width 900px
  margin 0 auto
  display flex
  background white
  .grid-figure
    box-shadow none
    margin 0 2rem 0 0
    border 0
    padding 0
    flex 1 0 60%
    max-width 60%
  .comments
    flex 1 0 40%
    max-width 40%
  .grid-photo
    width 100%
    margin 0

.grid-photo
  width calc(100% + 4rem)
  margin-left -2rem
  margin-top -2rem
  max-width none
  
// Comments
.remove-comment
  background none
  border 0
  line-height 1
  opacity 0
  &:hover
    color red

.comment
  border-bottom 1px solid lightgrey
  padding 0.5rem 0
  p
    font-size 1.2rem
    margin 0
  strong
    color blue
    margin-right 5px
  &:hover
    .remove-comment
      opacity 1
 
.comment-form 
  input, textarea
    width 100%
    border 0
    font-size 1.3rem
    padding 1rem 0
    border-bottom 1px solid lightgrey
    outline none
    resize vertical

// Post
.remove-post
  background white
  font-size 30px
  border 0
  line-height 1
  opacity: 0
  position absolute
  top 0px
  right 0px
  transition all ease-in-out 0.2s
  &:hover
    color #9d8ee6


.grid-photo-wrap
  position relative
  &:hover
    .remove-post
      opacity 1
  
.likes-heart
  background url(http://f.cl.ly/items/3Y373q2Q3J3Y1j203n0m/Bitmap-3.png) center no-repeat
  background-size contain
  font-size 2rem
  padding 1rem
  position absolute
  color blue
  left 50%
  top 50%
  pointer-events none
  

/*  
  Buttons  
*/
#upload-photo-id 
  display none !important
  visibility hidden


.upload-file
  display inline-block
  padding 1.0em 4.2em
  margin 0 0.3em 0.3em 0
  box-sizing  border-box
  text-decoration none
  color #FFFFFF
  text-align center
  transition  all 0.2s
  color: #6a55cf

